@model CurrencyExchange.Models.PostModel
@{
    ViewBag.Title = "Request an exchange";
}

<h2>@ViewBag.Title.</h2>
<section>
    @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Request an Exchange</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div>
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">From Currency</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.currencyFrom, ViewBag.CurrencyList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">To Currency</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.currenyTo, ViewBag.CurrencyList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Amount</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Amount" })
                        @Html.ValidationMessageFor(m => m.Amount, null, new { @class = "help-inline" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Rate</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Rate, new { @class = "form-control", placeholder = "Your Rate" })
                        @Html.ValidationMessageFor(m => m.Rate, null, new { @class = "help-inline" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Location</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Enter your location" })
                        @Html.ValidationMessageFor(m => m.Location, null, new { @class = "help-inline" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    }

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}